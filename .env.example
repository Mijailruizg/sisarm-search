# ============================================================
# VARIABLES DE ENTORNO PARA RAILWAY
# ============================================================
# Copia este archivo a .env en tu máquina local
# En Railway, configura estas variables en Project Settings → Variables

# Django
DJANGO_SETTINGS_MODULE=sisarm_search.production_settings
SECRET_KEY=tu_clave_secreta_super_larga_aqui_min_50_caracteres
DEBUG=False

# Base de datos (Railway la configura automáticamente)
# No necesitas configurarla manualmente; Railway la proporciona como DATABASE_URL

# Dominio
ALLOWED_HOSTS=mxtoday.online,www.mxtoday.online

# Email (opcional, para notificaciones)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=tu_email@gmail.com
EMAIL_HOST_PASSWORD=tu_contraseña_app
DEFAULT_FROM_EMAIL=noreply@mxtoday.online

# Dialogflow (si usas chatbot)
DIALOGFLOW_PROJECT_ID=tu_proyecto_dialogflow
GOOGLE_APPLICATION_CREDENTIALS=/path/to/dialogflow-key.json
